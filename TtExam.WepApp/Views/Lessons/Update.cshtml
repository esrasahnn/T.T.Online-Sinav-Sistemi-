@model LessonDto

<h1>Ders Güncelleme</h1>
<div action="row">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        @if (TempData.ContainsKey("SuccessMessage"))
        {
                <div class="alert alert-success">
                @TempData["SuccessMessage"]
                </div>
        }
        @if (TempData.ContainsKey("ErrorMessage"))
        {
                <div class="alert alert-danger">
                @TempData["ErrorMessage"]
                </div>
        }

        <form asp-controller="Lessons" asp-action="Update" method="post">
             <div class="mb-3">
                <label for="Name" class="form-label">Ders:</label>
                <input type="text" id="name" name="Name" class="form-control" value="@Model.Name"/>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Ders İçeriği:</label>
                <input type="text" id="name" name="Description" class="form-control" value="@Model.Description" />
            </div>
             <div class="mb-12">
                <div class="text-end">
                    <a class="btn btn-outline-warning" asp-action="Index">İptal</a>
                    <button class="btn btn-outline-success">
                        Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


