<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TtExam.WepApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TtExam.WepApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav id="nav" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:teal">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family:cursive; color:darkseagreen; font-size:30px">TtExam</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 nav-pills" >
                        <li class="nav-item" >
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Lessons" asp-action="Index">Dersler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Students" asp-action="Index">Öğrenciler</a>
                        </li>
                        <li class="nav-item dropdown" >
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                               Sınav Yönetimi
                            </a>
                            <ul class="dropdown-menu">
                                <li> <a class="nav-link text-dark" asp-area="" asp-controller="Questions" asp-action="Index">Sorular</a></li>
                                <li> <a class="nav-link text-dark" asp-area="" asp-controller="Exams" asp-action="Index">Sınavlar</a></li>
                                
                            </ul>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="StudentExams" asp-action="Index">Online Sınav Giriş</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="FooterClass" style="font-size:xx-small">
        <h5 style="color:#FFFFFF;font-size:medium; font-family:'Segoe UI'">Telif hakkı &copy; 2023</h5>
        <h6 style="color:#FFFFFF;font-size:medium;  font-family:'Segoe UI'">Tüm hakları Tt Exam'da saklıdır.</h6>
        <h6 style="color:#5b5870;font-size:medium; font-family:'Segoe UI';">İletişim: (0850) 000 25 25</h6>
     </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
