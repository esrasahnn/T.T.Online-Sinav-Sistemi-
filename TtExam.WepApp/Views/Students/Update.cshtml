@model StudentDto

<h1>Öğrenci Güncelleme</h1>
<div action="row">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        @if (TempData.ContainsKey("SuccessMessage"))
        {
                <div class="alert alert-success">
                @TempData["SuccessMessage"]
                </div>
        }
        @if (TempData.ContainsKey("ErrorMessage"))
        {
                <div class="alert alert-danger">
                @TempData["ErrorMessage"]
                    </div>
        }

        <form asp-controller="Students" asp-action="Update" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">T.C. Kimlik No:</label>
                <input type="text" id="name" name="IdentityNumber" class="form-control" value="@Model.IdentityNumber" readonly/>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Adı:</label>
                <input type="text" id="name" name="FirstName" class="form-control" value="@Model.FirstName" />
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Soyadı:</label>
                <input type="text" id="name" name="LastName" class="form-control" value="@Model.LastName" />
            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Doğum Tarihi</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Öğrenci No:</label>
                <input type="text" id="name" name="StudentNumber" class="form-control" value="@Model.StudentNumber" />
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Telefon No:</label>
                <input type="text" id="name" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
            </div>
             <div class="mb-5">
                <div class="text-end">
                    <a class="btn btn-outline-warning" asp-action="Index">İptal</a>
                    <button class="btn btn-outline-success">
                        Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


